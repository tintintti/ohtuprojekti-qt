<meta charset="utf-8">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

<p id="notice"><%= notice %></p>

<div class="container">

<h1>Aiheiden listaaminen</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Tid</th>
      <th>Uid</th>
      <th>Cid</th>
      <th>Mainpid</th>
      <th>Title</th>
      <th>Slug</th>
      <th>Timestamp</th>
      <th>Lastposttime</th>
      <th>Postcount</th>
      <th>Viewcount</th>
      <th>Locked</th>
      <th>Pinned</th>
      <th>Isquestion</th>
      <th>Issolved</th>
      <th>Relativetime</th>
      <th>Lastposttimeiso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.tid %></td>
        <td><%= topic.uid %></td>
        <td><%= topic.cid %></td>
        <td><%= topic.mainPid %></td>
        <td><%= topic.title %></td>
        <td><%= topic.slug %></td>
        <td><%= topic.timestamp %></td>
        <td><%= topic.lastposttime %></td>
        <td><%= topic.postcount %></td>
        <td><%= topic.viewcount %></td>
        <td><%= topic.locked %></td>
        <td><%= topic.pinned %></td>
        <td><%= topic.isQuestion %></td>
        <td><%= topic.isSolved %></td>
        <td><%= topic.relativeTime %></td>
        <td><%= topic.lastposttimeISO %></td>
        <td><%= link_to 'Show', topic %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
