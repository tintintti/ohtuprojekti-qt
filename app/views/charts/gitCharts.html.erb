<html>
    <!DOCTYPE html>
    <meta charset="utf-8">
    <body>

        <div class="container">
          <%= form_tag git_charts_path do %>
            <%= submit_tag "Rajaa dataa" %>
            Aika <%= date_field_tag :time, params[:time] || "01/01/2015".to_date %>
            Määrä <%= text_field_tag :amount, params[:amount] || 100 %>
          <% end %>
          <p></p>
          <button type="button" class="btn btn-primary active" onclick=drawAuthorPieChart()>Näytä kaavio</button>
        </div>

        <%= content_tag "div", id: "git_data", data: {authors: @authors, commits: @commits} do %>
        <% end %>
        <%= javascript_include_tag "d3.v3.min.js" %>
        <%= javascript_include_tag "nvd3.js" %>
        <%= javascript_include_tag "gitCharts.js" %>
        <%= stylesheet_link_tag "nvcss.css" %>

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

        <div class="container" id="buttonFeature"></div>

        <div id="charts"></div>

    </body>
</html>
