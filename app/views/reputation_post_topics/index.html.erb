<table>
  <thead>
    <tr>
      <th>Tid</th>
      <th>Reputation</th>
      <th>Postcount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reputation_post_topics.each do |reputation_post_topic| %>
      <tr>
        <td><%= reputation_post_topic.tid %></td>
        <td><%= reputation_post_topic.reputation %></td>
        <td><%= reputation_post_topic.postcount %></td>
        <td><%= link_to 'Show', reputation_post_topic %></td>
        <td><%= link_to 'Edit', edit_reputation_post_topic_path(reputation_post_topic) %></td>
        <td><%= link_to 'Destroy', reputation_post_topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

